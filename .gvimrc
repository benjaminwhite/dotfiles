" Ben White

" ------------------------------------------------------------------------------
" General
" ------------------------------------------------------------------------------
" Remove the toolbar
set guioptions-=r

" Use inconsolata-dz
set guifont=Inconsolata-dz:h13

" Use block cursor in all modes
set guicursor+=a:block

" Disable blinking cursor in all modes
"set guicursor+=a:blinkon0

" Disable Bell
set vb t_vb=

" Fullscreen options
set fuoptions=maxvert,maxhorz
noremap <D-Enter> :set invfullscreen<Enter>

map <C-Tab> gt
map <C-S-Tab> gT














































